var currSubtopic=0;

$(function(){
    $("#sub_name1").on("click", ShowSubtopic1);
    $("#sub_name2").on("click", ShowSubtopic2);
    $("#sub_name3").on("click", ShowSubtopic3);
    $(".menu").on("click", ShowMainTopic);
    $(".front").on("click", PrevSubtopic);
    $(".back").on("click", NextSubtopic);
    // ____click icons______
    $("#seal_blue").on("click", SealBlue);
    $("#clerical_blue").on("click", ClericalBlue);
    $("#regular_blue").on("click", RegularBlue);
    $("#semicursive_blue").on("click", SemicursiveBlue);
    $("#cursive_blue").on("click", CursiveBlue);
    // _____sub2 buttons_____
    $("#write_seal").on("click", SealAnimation);
    $("#write_clerical").on("click", ClericalAnimation);
    $("#write_regular").on("click", RegularAnimation);
    $("#write_semi").on("click", SemiAnimation);
    $("#write_cursive").on("click", CursiveAnimation);
    // ______click audio_______
    $("#shufa_speaker").on("click", PlayShufa);
    $("#seal_speaker").on("click", PlayZhuanshu);
    $("#clerical_speaker").on("click", PlayLishu);
    $("#regular_speaker").on("click", PlayKaishu);
    $("#semi_speaker").on("click", PlayXingshu);
    $("#cursive_speaker").on("click", PlayCaoshu);
    // __________Open Board__________
    $("#paper").on("click", ShowPaperBoard);
    $(".board_back_p").on("click", HidePaperBoard);

    $("#deskpad").on("click", ShowDeskpadBoard);
    $(".board_back_d").on("click", HideDeskpadBoard);

    $("#paperweight").on("click", ShowPaperweightBoard);
    $(".board_back_w").on("click", HidePaperweightBoard);

    $("#brush").on("click", ShowBrushBoard);
    $(".board_back_b").on("click", HideBrushBoard);

    $("#sealr").on("click", ShowSealBoard);
    $(".board_back_s").on("click", HideSealBoard);

    $("#inkstone").on("click", ShowInkBoard);
    $(".board_back_i").on("click", HideInkBoard);

    $(".click_board_p").hide();
    $(".click_board_d").hide();
    $(".click_board_w").hide();
    $(".click_board_b").hide();
    $(".click_board_s").hide();
    $(".click_board_i").hide();

    // ShowSubtopic3();
    ShowMainTopic();
    CurtainAnimation();
})


function PrevSubtopic(){
    console.log(currSubtopic);
    if(currSubtopic==3){
        ShowSubtopic2();
    }
    else if(currSubtopic==2){
        ShowSubtopic1();
    }
};
function NextSubtopic(){
    console.log(currSubtopic);
    if(currSubtopic==0){
        ShowSubtopic1();
    }
    else if(currSubtopic==1){
        ShowSubtopic2();
    }
    else if(currSubtopic==2){
        ShowSubtopic3();
    }
    
};

function HideSubtopics(){
    $("#all>div").hide();
}

function ShowSubtopic1(){
    HideSubtopics();
    currSubtopic=1;
    $("#subtopic1").show();
}

function ShowSubtopic2(){
    HideSubtopics();
    currSubtopic=2;
    $("#subtopic2").show();
}

function ShowSubtopic3(){
    HideSubtopics();
    currSubtopic=3;
    $("#subtopic3").show();
}

function ShowMainTopic(){
    HideSubtopics();
    currSubtopic=0;
    HideSubtopics();
    $("#MainTopic").show();
}

